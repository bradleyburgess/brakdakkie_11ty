---
layout: 'layouts/base.njk'
permalink: /contact/
---

<div class="sbs-grid contact">
    <div class="sbs-grid__image contact__image">
        {% image contactPage.image, "", sizes = "(max-width: 1023px) 100vw, 500px", loading = "eager"
        %}
    </div>
    <div class="sbs-grid__text contact__text">
        <h1 class="contact__heading">Contact Us</h1>
        <ul class="contact__list">
            {% for item in socialLinks.all %}
                <li class="contact__list-item">
                    <div class="contact__icon">{% image 'assets/icon-' + item.name | slugify + '.svg',
                    item.name,
                    widths = [null],
                    formats = ['svg'] %}</div>
                    <a href="{{ item.url }}" class="contact__link">{{ item.description }}</a>
                </li>
            {% endfor %}
        </ul>
    </div>
</div>